    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}
    %title WilyKit
    %link{:rel=>"shortcut icon", :href=>"favicon.ico"}/
    %link{:title=>"Home", :type=>"text/html", :href=>"/"}
    %link{:title=>"Baisics", :type=>"text/html", :href=>"/basics"}
