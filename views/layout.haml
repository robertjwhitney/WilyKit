            %a{:href=>"/", :title=>"Site Root"} Home
            %a{:href=>"/basics", :title=>"WilyKit Basic Implementation"} Basics
            %a{:href=>"/advanced", :title=>"WilyKit Basic Implementation"} Advanced
            %a{:href=>"https://github.com/robertjwhitney/wilykit", :title=>"Get the source code on Github"} Source
          #tabs
            #primary-nav
              %ul
                %li
                  %a{:href=>"#", :title=>"Example Link"}
                    Link
                %li.active
                  %a{:href=>"#", :title=>"Example Link"}
                    Active
                %li
                  %a{:href=>"#", :title=>"Example Link"}
                    Link
            #secondary-nav
              %ul
                %li
                  %a{:href=>"#", :title=>"Example Link"}
                    Profile
                %li
                  %a{:href=>"#", :title=>"Example Link"}
                    Settings
                %li
                  %a{:href=>"#", :title=>"Example Link"}
                    Logout
      .clearfix
      #content
        = yield